<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".boundary.HCSProductsFragment">

    <RelativeLayout
        android:id="@+id/hcsSelectCatLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Spinner
            android:id="@+id/sortSpinner"
            android:layout_width="290dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/sort_customshape"
            android:spinnerMode="dropdown" />


        <TextView
            android:id="@+id/tvSortSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="Catergory:" />


        <Spinner
            android:id="@+id/CatSpinner"
            android:layout_width="290dp"
            android:layout_height="30dp"
            android:layout_below="@+id/sortSpinner"
            android:layout_marginStart="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/sort_customshape"
            android:spinnerMode="dropdown" />


        <TextView
            android:id="@+id/CatSortSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sortSpinner"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="Sort By:" />

        <SearchView
            android:id="@+id/HSCsearchView"
            android:layout_width="380dp"
            android:layout_height="25dp"
            android:layout_above="@+id/HCSListView"
            android:layout_marginBottom="-120dp"
            android:background="@drawable/sort_customshape"
            android:focusableInTouchMode="true"
            android:iconifiedByDefault="false"
            android:queryHint="Tap here to search for HCS products" />

        <TextView
            android:id="@+id/CatTypeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/HSCsearchView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="130dp"
            android:text="Category Name"/>


        <ListView
            android:id="@+id/HCSListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="150dp"></ListView>

        <LinearLayout
            android:id="@+id/resultLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="250dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="7"
                android:contentDescription="@string/NoResults"
                android:drawableStart="@drawable/ic_action_search"
                android:drawableLeft="@drawable/ic_action_search"
                android:src="@drawable/ic_action_search" />

            <TextView
                android:id="@+id/tvSearchResult"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:text="@string/NoResults"
                android:textColor="#000000" />
        </LinearLayout>
    </RelativeLayout>



</android.support.constraint.ConstraintLayout>